<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_weight="6.8"
>
<LinearLayout
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_weight="2"
>
<EditText
android:id="@+id/et_weibo_username"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:textSize="18sp"
android:layout_weight="2"
android:hint="新浪微博用户名"
>
</EditText>
<EditText
android:id="@+id/et_weibo_password"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:textSize="18sp"
android:layout_weight="2"
android:hint="新浪微博密码"
android:password="true"
>
</EditText>
<TextView
android:id="@+id/tv_charcount"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:textSize="18sp"
android:layout_weight="2"
android:gravity="bottom"
android:editable="false" android:singleLine="true" android:text="可输入字数：140" android:layout_gravity="bottom">
</TextView>
</LinearLayout>
<ImageView
android:id="@+id/et_weibo_filename"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:textSize="18sp"
android:layout_weight="2"
android:hint="文件名"
/>
</LinearLayout>
<LinearLayout
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_weight="6"
>
<EditText
android:id="@+id/et_weibo"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:textSize="18sp"
android:gravity="top"
android:hint="内容"
>
</EditText>
</LinearLayout>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_weight="10"
>
<Button
android:id="@+id/btn_weibo_send"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="发送"
android:layout_weight="1"
>
</Button>
<Button
android:id="@+id/btn_weibo_quit"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="退出"
android:layout_weight="1"
>
</Button>
</LinearLayout>
</LinearLayout>
